
@{
    ViewBag.Title = "InicioUsuario";
}



@section Contentheader{
    <div class="top-bar clearfix" style="background:#6BC907" >
        <div class="row gutter">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="page-title">
                    <h4>Perfil Usuario</h4>
                </div>
            </div>
        </div>
    </div>
}
    <div class="col-lg-5 col-md-5 col-sm-7 col-xs-12">
        <div class="panel no-border height2 teal-bg">
            <div class="panel-body">
                <div class="user-profile clearfix">
                    <div class="user-img">
                        
                        <span class="completed-info">S<sup></sup></span>
                    </div>
                    <h5>Cliente</h5>
                    <h3>Srinu Basava</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-7 col-md-5 col-sm-7 col-xs-12">
        <div class="panel no-border height2">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" name="Nombre" id="txtNombre" class="form-control"  />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Apellido</label>
                            <input type="text" name="Apellido" id="txtApellido" class="form-control"  />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Telefono</label>
                            <input type="text" name="Telefono" id="txtTelefono" class="form-control"  />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="Email" id="txtEmail" class="form-control"  />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fecha Registro</label>
                            <input type="text" name="Fecha" id="txtFecha" class="form-control"  />
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-6">
                        <button type="button" class="btn btn-warning btn-block pull-right"><i class="icon-save"></i> Modificar Usuario</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section js{
    <script src="~/Content/viewJs/Usuario/PerfilVista.js"></script>    
}