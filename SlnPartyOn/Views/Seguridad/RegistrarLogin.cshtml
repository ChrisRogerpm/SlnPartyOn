
@{
    Layout = null;
}

@using SlnPartyOn.Models
@{
    UsuarioModel usuario = (UsuarioModel)Session["UsuarioFull"];
    string usuariotipo = "";

    if (usuario != null)
    {

        if (usuario.TipoUsuario == 1)
        {
            Response.Redirect("~/Usuario/InicioAdministradorVista");
        }
        else
        {
            Response.Redirect("~/Usuario/InicioUsuarioVista");
        }
    }
}

